       </div> <!--  头像-->\n            <div style=\"flex: 1; font-size: 14px; padding: 5px 0; line-height: 25px\">\n              <b>{{ item.nickname }}：</b>\n              <span>{{ item.content }}</span>\n\n              <div style=\"display: flex; line-height: 20px; margin-top: 5px\">\n                <div style=\"width: 200px;\">\n                  <i class=\"el-icon-time\"></i><span style=\"margin-left: 5px\">{{ item.time }}</span>\n                </div>\n                <div style=\"text-align: right; flex: 1\">\n                  <el-button style=\"margin-left: 5px\" type=\"text\" @click=\"handleReply(item.id)\">回复</el-button>\n                  <el-button type=\"text\" style=\"color: red\" @click=\"del(item.id)\" v-if=\"user.id === item.userId\">删除</el-button>\n                </div>\n              </div>\n            </div>   <!--  内容-->\n          </div>\n\n          <div v-if=\"item.children.length\"  style=\"padding-left: 200px;\">\n            <div v-for=\"subItem in item.children\" :key=\"subItem.id\"  style=\"background-color: #f0f0f0; padding: 5px 20px\">\n              <!--          回复列表-->\n              <div style=\"font-size: 14px; padding: 5px 0; line-height: 25px\">\n                <div>\n                  <b style=\"color: #3a8ee6\" v-if=\"subItem.pnickname\">@{{ subItem.pnickname }}</b>\n                </div>\n                <div style=\"padding-left: 5px\">\n                  <b>{{ subItem.nickname }}：</b>\n                  <span>{{ subItem.content }}</span>\n                </div>\n\n                <div style=\"display: flex; line-height: 20px; margin-top: 5px; padding-left: 5px\">\n                  <div style=\"width: 200px;\">\n                    <i class=\"el-icon-time\"></i><span style=\"margin-left: 5px\">{{ subItem.time }}</span>\n                  </div>\n                  <div style=\"text-align: right; flex: 1\">\n                    <el-button style=\"margin-left: 5px\" type=\"text\" @click=\"handleReply(subItem.id)\">回复</el-button>\n                    <el-button type=\"text\" style=\"color: red\" @click=\"del(subItem.id)\" v-if=\"user.id === subItem.userId\">删除</el-button>\n                  </div>\n                </div>\n              </div>   <!--  内容-->\n            </div>\n\n          </div>\n\n\n        </div>\n      </div>\n    </div>\n\n\n    <el-dialog title=\"回复\" :visible.sync=\"dialogFormVisible\" width=\"50%\" >\n      <el-form label-width=\"80px\" size=\"small\">\n        <el-form-item label=\"回复内容\">\n          <el-input type=\"textarea\" v-model=\"commentForm.contentReply\" autocomplete=\"off\"></el-input>\n        </el-form-item>\n      </el-form>\n      <div slot=\"footer\" class=\"dialog-footer\">\n        <el-button @click=\"dialogFormVisible = false\" size=\"small\">取 消</el-button>\n        <el-button type=\"primary\" @click=\"save\"  size=\"small\">确 定</el-button>\n      </div>\n    </el-dialog>\n\n  </div>\n</template>\n\n<script>\n\nexport default {\n  name: \"Article\",\n  data() {\n    return {\n      article: {},\n      user: localStorage.getItem(\"user\") ? JSON.parse(localStorage.getItem(\"user\")) : {},\n      comments: [],\n      commentForm: {},\n      id: this.$route.query.id,\n      dialogFormVisible: false\n    }\n  },\n  created() {\n    this.load()\n    this.loadComment()\n  },\n  methods: {\n    load() {\n      this.request.get(\"http://localhost:9090/article/\" + this.id).then(res => {\n        this.article = res.data\n      })\n    },\n    loadComment() {\n      this.request.get(\"http://localhost:9090/comment/tree/\" + this.id).then(res => {\n        this.comments = res.data\n      })\n    },\n    save() {\n      if (!this.user.id) {\n        console.log(this.user.id)\n        this.$message.warning(\"请登录后操作\")\n        return\n      }\n      this.commentForm.articleId = this.id\n      if (this.commentForm.contentReply) {\n        this.commentForm.content = this.commentForm.contentReply\n      }\n      this.request.post(\"http://localhost:9090/comment\", this.commentForm).then(res => {\n        if (res.code === '200') {\n          this.$message.success(\"评论成功\")\n          this.commentForm = {}  // 初始化评论对象内容\n          this.loadComment()\n          this.dialogFormVisible = false\n        } else {\n          this.$message.error(res.msg)\n        }\n      })\n    },\n    del(id) {\n      this.request.delete(\"http://localhost:9090/comment/\" + id).then(res => {\n        if (res.code === '200') {\n          this.$message.success(\"删除成功\")\n          this.loadComment()\n        } else {\n          this.$message.error(\"删除失败\")\n        }\n      })\n    },\n    handleReply(pid) {\n      this.commentForm = { pid: pid }\n      this.dialogFormVisible = true\n    }\n  }\n}\n</script>\n\n<style scoped>\n\n</style>\n"],"mappings":"AA0GA;EACAA,IAAA;EACAC,KAAA;IACA;MACAC,OAAA;MACAC,IAAA,EAAAC,YAAA,CAAAC,OAAA,WAAAC,IAAA,CAAAC,KAAA,CAAAH,YAAA,CAAAC,OAAA;MACAG,QAAA;MACAC,WAAA;MACAC,EAAA,OAAAC,MAAA,CAAAC,KAAA,CAAAF,EAAA;MACAG,iBAAA;IACA;EACA;EACAC,QAAA;IACA,KAAAC,IAAA;IACA,KAAAC,WAAA;EACA;EACAC,OAAA;IACAF,KAAA;MACA,KAAAG,OAAA,CAAAC,GAAA,yCAAAT,EAAA,EAAAU,IAAA,CAAAC,GAAA;QACA,KAAAnB,OAAA,GAAAmB,GAAA,CAAApB,IAAA;MACA;IACA;IACAe,YAAA;MACA,KAAAE,OAAA,CAAAC,GAAA,8CAAAT,EAAA,EAAAU,IAAA,CAAAC,GAAA;QACA,KAAAb,QAAA,GAAAa,GAAA,CAAApB,IAAA;MACA;IACA;IACAqB,KAAA;MACA,UAAAnB,IAAA,CAAAO,EAAA;QACAa,OAAA,CAAAC,GAAA,MAAArB,IAAA,CAAAO,EAAA;QACA,KAAAe,QAAA,CAAAC,OAAA;QACA;MACA;MACA,KAAAjB,WAAA,CAAAkB,SAAA,QAAAjB,EAAA;MACA,SAAAD,WAAA,CAAAmB,YAAA;QACA,KAAAnB,WAAA,CAAAoB,OAAA,QAAApB,WAAA,CAAAmB,YAAA;MACA;MACA,KAAAV,OAAA,CAAAY,IAAA,uCAAArB,WAAA,EAAAW,IAAA,CAAAC,GAAA;QACA,IAAAA,GAAA,CAAAU,IAAA;UACA,KAAAN,QAAA,CAAAO,OAAA;UACA,KAAAvB,WAAA;UACA,KAAAO,WAAA;UACA,KAAAH,iBAAA;QACA;UACA,KAAAY,QAAA,CAAAQ,KAAA,CAAAZ,GAAA,CAAAa,GAAA;QACA;MACA;IACA;IACAC,IAAAzB,EAAA;MACA,KAAAQ,OAAA,CAAAkB,MAAA,oCAAA1B,EAAA,EAAAU,IAAA,CAAAC,GAAA;QACA,IAAAA,GAAA,CAAAU,IAAA;UACA,KAAAN,QAAA,CAAAO,OAAA;UACA,KAAAhB,WAAA;QACA;UACA,KAAAS,QAAA,CAAAQ,KAAA;QACA;MACA;IACA;IACAI,YAAAC,